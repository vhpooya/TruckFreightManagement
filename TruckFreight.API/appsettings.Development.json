{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TruckFreightDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-here",
    "Issuer": "TruckFreight",
    "Audience": "TruckFreight",
    "ExpirationInMinutes": 60
  },
  "PaymentGateway": {
    "DefaultProvider": "Zarinpal",
    "RedirectBaseUrl": "https://localhost:5001/payment",
    "Zarinpal": {
      "MerchantId": "your-merchant-id",
      "ApiKey": "your-api-key",
      "BaseUrl": "https://api.zarinpal.com",
      "IsEnabled": true,
      "Timeout": 30,
      "RetryCount": 3
    },
    "NextPay": {
      "ApiKey": "your-api-key",
      "BaseUrl": "https://nextpay.org",
      "IsEnabled": true,
      "Timeout": 30,
      "RetryCount": 3
    },
    "Mellat": {
      "TerminalId": "your-terminal-id",
      "Username": "your-username",
      "Password": "your-password",
      "BaseUrl": "https://bpm.shaparak.ir",
      "IsEnabled": true,
      "Timeout": 30,
      "RetryCount": 3
    }
  }
} 