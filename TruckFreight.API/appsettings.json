{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileStorage": {
    "UploadDirectory": "uploads",
    "BackupDirectory": "backups",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx"],
    "EncryptionKey": "YourBase64EncodedKeyHere",
    "EncryptionIV": "YourBase64EncodedIVHere",
    "BackupRetentionDays": 30
  },
  "VirusScan": {
    "ClamAv": {
      "Host": "localhost",
      "Port": 3310,
      "Timeout": 30000
    }
  }
} 