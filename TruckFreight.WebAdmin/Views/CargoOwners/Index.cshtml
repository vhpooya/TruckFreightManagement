@model IEnumerable<TruckFreight.WebAdmin.Models.ViewModels.CargoOwnerDto>

@{
    ViewData["Title"] = "Cargo Owners";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Cargo Owners</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Cargo Owner
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="cargoOwnersTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.FullName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>
                                    <span class="badge bg-info">@item.Type</span>
                                </td>
                                <td>
                                    @if (item.IsVerified)
                                    {
                                        <span class="badge bg-success">Verified</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    @if (item.IsBlocked)
                                    {
                                        <span class="badge bg-danger">Blocked</span>
                                    }
                                </td>
                                <td>@item.RegistrationDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a asp-action="CargoHistory" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                                            <i class="fas fa-history"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#cargoOwnersTable').DataTable({
                order: [[0, 'desc']],
                pageLength: 25,
                language: {
                    url: '/lib/datatables/fa.json'
                }
            });
        });
    </script>
} 